<div class="list-container">
  <div class="show-row">
    <div class="col-md-3 text-center">
      <p><img src="<%= @book.image_url(:medium) %>"></p>
    </div>
    <div class="col-md-9">
      <h3><%= @book.title %></h3>
      <p><%= @book.category %> | <%= @book.publicdate %> | <%= @book.out %></p>
      <hr>
      <h4><%= @book.price %> 원</h4>
      <hr>
      <p><a href="/books/shopping_list_add/<%= @book.id %>">장바구니</a>
        <% if session[:user_id]==1 %>
          | <a href="/books/edit/<%= @book.id %>">수정</a> | <a href="/books/delete_complete/<%= @book.id %>">삭제</a>
        <% end %>
      </p>
    </div>
  </div>
  <div class="show-row">
    <h4>책 소개</h4>
    <br>
    <p><%= @book.content %></p>
    <hr>
  </div>
  <div class="show-row">
    <div class="col-md-6">
      <h4>리뷰</h4>
    </div>
    <div class="col-md-6 text-right">
      <br>
      <p><a href="/book_reviews/write/<%= @book.id %>">리뷰작성</a></p>
    </div>
  </div>
  <div class="show-row">
    <% @book.book_review.each do |book_review| %>
      <p><strong><%= book_review.user.username %> </strong><a href="/book_reviews/show/<%= book_review.id %>"><%= book_review.title %></a> [<%= book_review.book_review_comments.count %>]</p>
    <% end %>
  </div>
</div>
