<div class="list-container">
  <h2>장바구니</h2>

  <% @shoppinglist.reverse.each do |purchaselist| %>
  <div class="list-row">
    <div class="col-md-2">
      <a href="/books/show/<%= purchaselist.book.id %>"><img src="<%= purchaselist.book.image_url(:thumb) %>" width="105px"></a>
    </div>
    <div class="col-md-7">
      <br>
      <font style="font-size:20px;"><a href="/books/show/<%= purchaselist.book.id %>">[<%= purchaselist.book.category %>] <%= purchaselist.book.title %></a></font>
      <br><br>
      <p>발행일자: <%= purchaselist.book.publicdate %>
      <p>회원리뷰: <%= purchaselist.book.book_review.count %> 개</p>
    </div>
    <div class="col-md-3 text-right">
      <br>
      <br>
      <font style="font-size:20px;"><%= purchaselist.book.price %></font> 원
      <br>
      <br>
      <font color="#FF0000"><%= purchaselist.book.out %></font>
      <br>
      <br>
      <a href="/books/shopping_delete/<%= purchaselist.id %>">장바구니에서 제외</a>
    </div>
  </div>
  <% end %>
  <div class="list-row">
    <div class="text-right">
      <hr>
      <h3>최종 결제금액: <%= @total_price %> 원</h3>
      <p><font style="font-size:20px;"><a href="/books/purchase_complete/<%= @total_price %>">주문하기</a></font></p>
    </div>
  </div>
</div>
